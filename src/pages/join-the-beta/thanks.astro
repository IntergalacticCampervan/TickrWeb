---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navbar from "../../components/Navbar.astro";
---

<BaseLayout title="You're on the list">
  <main class="relative min-h-screen overflow-hidden px-4 pb-20 pt-24 text-white sm:pt-28">
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_#111827_0%,_#0f172a_50%,_#020617_100%)]"></div>
    <div class="absolute -left-32 top-24 h-72 w-72 rounded-full bg-fuchsia-500/15 blur-[140px]"></div>
    <div class="absolute right-10 top-40 h-72 w-72 rounded-full bg-violet-500/15 blur-[160px]"></div>

    <Navbar />

    <div class="mx-auto mt-10 w-full max-w-2xl space-y-8">
      <header class="space-y-5 text-left">
        <p class="text-xs uppercase tracking-[0.3em] text-white/50">Tickr</p>
        <h1 class="text-3xl font-semibold sm:text-4xl">You're on the list</h1>
        <p class="text-base text-white/70 leading-relaxed">
          Thanks for signing up for the Tickr beta. We'll email you as soon as early access opens.
        </p>
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 text-xs font-semibold text-white/80 transition hover:-translate-y-0.5 hover:text-white"
        >
          ‚Üê Back to home
        </a>
      </header>

      <section class="space-y-6 rounded-3xl border border-white/10 bg-white/5 p-5 sm:p-6">
        <div class="space-y-2">
          <h2 class="text-lg font-semibold">What happens next</h2>
          <p class="text-sm text-white/70">
            We'll share updates as we prep the beta and send your access link when your platform opens.
          </p>
        </div>

        <div class="space-y-3">
          <h2 class="text-lg font-semibold">Platform-specific expectations</h2>
          <div class="grid gap-3 sm:grid-cols-2">
            <div class="rounded-2xl border border-white/10 bg-black/40 p-4 text-sm text-white/70">
              <p class="text-white/90">iOS</p>
              <p class="mt-2">
                You'll receive a TestFlight invite with install steps and access details.
              </p>
            </div>
            <div class="rounded-2xl border border-white/10 bg-black/40 p-4 text-sm text-white/70">
              <p class="text-white/90">Android</p>
              <p class="mt-2">
                You'll get a Google Play testing link with instructions to opt in.
              </p>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

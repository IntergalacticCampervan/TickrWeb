---
import "../styles/global.css";

const { title = "TickrWeb", description = "See what you earn. As you earn it." } = Astro.props;
---
<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-full font-sans">
    <slot />
    <footer class="border-t border-white/5 bg-white/5 py-6 text-center text-xs text-white/50 backdrop-blur">
      <span class="inline-flex items-center justify-center gap-2">
        <span>powered by</span>
        <a href="https://fieldcraftlabs.dev" class="inline-flex items-center">
          <img src="/fieldcraft-logo.png" alt="Fieldcraft Labs" class="h-12 w-auto" />
        </a>
      </span>
    </footer>
  </body>
</html>

---
const { title, value, description, className = "" } = Astro.props;
---

<div
  class={`rounded-2xl border border-white/20 bg-white/10 p-4 text-left shadow-lg backdrop-blur-md ${className}`}
>
  <div class="flex items-center gap-3">
    <div class="flex h-9 w-9 items-center justify-center rounded-full bg-white/15 text-white">
      <slot name="icon" />
    </div>
    <div>
      <p class="text-[10px] uppercase tracking-[0.2em] text-white/60">{title}</p>
      <p class="text-lg font-semibold text-white">{value}</p>
    </div>
  </div>
  <p class="mt-3 text-xs leading-relaxed text-white/70">{description}</p>
</div>
